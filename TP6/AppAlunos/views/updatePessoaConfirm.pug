extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Person Record Updated: #{a.id}
        
    .w3-container
        img.w3-left.w3-circle(src="/images/student.png" alt="Avatar" width="100")
        ul.w3-ul.w3-card-4
          li #[b Nome:] #{a.nome}
          li #[b Idade:] #{a.idade}
          li #[b Morada:] #{a.cidade},#{a.distrito}
          li #[b BI:] #{a.BI}
          li #[b Profissão:] #{a.profissao}
          li #[b Partido Político:] #{a.party_name} (#{a.party_abbr})  
          li #[b Religião:] #{a.religiao}
          li #[b Desportos:]
          ol.w3-ol
            each desp in a.desportos.split(",")
              li=desp
          li #[b Animais:]
          ol.w3-ol
            each animal in a.animais.split(",")
              li=animal
          li #[b Figura Pública PT:]
          ol.w3-ol
            each fig in a.figura_publica_pt.split(",")
              li=fig
          li #[b Marca Carro:] #{a.marca_carro}
          li #[b Destinos Favoritos:]
          ol.w3-ol
            each dest in a.destinos_favoritos.split(",")
              li=dest
          .w3-container 
            fieldset.w3-margin 
              legend Atributos
              p
                if a.fumador
                  label Fumador    
                  input.w3-check(type="checkbox" name="fumador" value="1" checked )
                else
                  label Fumador    
                  input.w3-check(type="checkbox" name="fumador" value="1" )                  
              p  
                if a.gosta_cinema
                  label Gosta de cinema    
                  input.w3-check(type="checkbox" name="gosta_cinema" value="1" checked )
                else
                  label Gosta de cinema    
                  input.w3-check(type="checkbox" name="gosta_cinema" value="1" )                 
              p
                if a.gosta_viajar
                  label Gosta de viajar    
                  input.w3-check(type="checkbox" name="gosta_viajar" value="1" checked )
                else
                  label Gosta de viajar    
                  input.w3-check(type="checkbox" name="gosta_viajar" value="1" )                 
              p
                if a.acorda_cedo
                  label Acorda cedo    
                  input.w3-check(type="checkbox" name="acorda_cedo" value="1" checked )
                else
                  label Acorda cedo    
                  input.w3-check(type="checkbox" name="acorda_cedo" value="1" )                 
              p
                if a.gosta_ler
                  label Gosta de ler    
                  input.w3-check(type="checkbox" name="gosta_ler" value="1" checked )
                else
                  label Gosta de ler    
                  input.w3-check(type="checkbox" name="gosta_ler" value="1" )                 
              p
                if a.gosta_musica
                  label Gosta de música    
                  input.w3-check(type="checkbox" name="gosta_musica" value="1" checked )
                else
                  label Gosta de música    
                  input.w3-check(type="checkbox" name="gosta_musica" value="1" )                 
              p
                if a.gosta_comer
                  label Gosta de comer    
                  input.w3-check(type="checkbox" name="gosta_comer" value="1" checked )
                else
                  label Gosta de comer    
                  input.w3-check(type="checkbox" name="gosta_comer" value="1" )                 
              p
                if a.gosta_animais_estimacao
                  label Gosta de animais de estimação    
                  input.w3-check(type="checkbox" name="gosta_animais_estimacao" value="1" checked )
                else
                  label Gosta de animais de estimação    
                  input.w3-check(type="checkbox" name="gosta_animais_estimacao" value="1" )                 
              p
                if a.gosta_dancar
                  label Gosta de dançar    
                  input.w3-check(type="checkbox" name="gosta_dancar" value="1" checked )
                else
                  label Gosta de dançar    
                  input.w3-check(type="checkbox" name="gosta_dancar" value="1")
              p #[b Comida Favorita:] #{a.comida_favorita}
    footer.w3-container.w3-teal 
      h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]


