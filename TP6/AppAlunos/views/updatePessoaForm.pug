extends layout 
block content 

    .w3-card-4
        header.w3-container.w3-purple
            h2 Person Form
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label Name
                input.w3-input.w3-round(type="text" name="nome" value=a.nome)
                label Idade
                input.w3-input.w3-round(type="number" name="idade" value=a.idade)
                
                fieldset
                    legend Morada
                    label Cidade
                    input.w3-input.w3-round(type="text" name="cidade" value=a.morada.cidade)
                    label Distrito 
                    input.w3-input.w3-round(type="text" name="distrito" value=a.morada.distrito)
                
                label Descrição
                input.w3-input.w3-round(type="text" name="descrição" value=a.descrição)

                fieldset
                    legend ID
                    label BI
                    input.w3-input.w3-round(type="text" name="BI" value=a.BI readonly)
                    label CC
                    input.w3-input.w3-round(type="text" name="CC" value=a.CC readonly)
                
                label Profissão
                input.w3-input.w3-round(type="text" name="profissao" value=a.profissao)
                
                fieldset
                    legent Partido Político
                    label Nome do Partido
                    input.w3-input.w3-round(type="text" name="party_name" value=a.partido_politico.party_name)
                    label Abreviatura do Partido
                    input.w3-input.w3-round(type="text" name="party_abbr" value=a.partido_politico.party_abbr)

                label Religião
                input.w3-input.w3-round(type="text" name="religiao" value=a.religiao)

                label Desportos Realizados (divididos por vírgula)
                input.w3-input.w3-round(type="text" name="desportos" value=a.desportos.join(", "))

                label Animais Preferidos (divididos por vírgula)
                input.w3-input.w3-round(type="text" name="animais" value=a.animais.join(", "))

                label Figuras Públicas Portuguesas preferidas (divididas por vírgula)
                input.w3-input.w3-round(type="text" name="figura_publica_pt" value=a.figura_publica_pt.join(", "))

                label Marca do Carro
                input.w3-input.w3-round(type="text" name="marca_carro" value=a.marca_carro)

                label Destinos favoritos (divididos por vírgula)
                input.w3-input.w3-round(type="text" name="destinos_favoritos" value=a.destinos_favoritos.join(", "))

                fieldset
                    legend Atributos
                    p
                        label Fumador    
                        if a.atributos.fumador
                            input.w3-check(type="checkbox" name="fumador" value="1")
                        else
                            input.w3-check(type="checkbox" name="fumador" value="1" checked)
                    p
                        label Gosta de cinema   
                        if a.atributos.gosta_cinema
                            input.w3-check(type="checkbox" name="gosta_cinema" value="1")
                        else
                            input.w3-check(type="checkbox" name="gosta_cinema" value="1" checked)              
                    p
                        label Gosta de viajar
                        if a.atributos.gosta_viajar
                            input.w3-check(type="checkbox" name="gosta_viajar" value="1")
                        else
                            input.w3-check(type="checkbox" name="gosta_viajar" value="1" checked)    
                    p
                        label Acorda cedo    
                        if a.atributos.acorda_cedo
                            input.w3-check(type="checkbox" name="acorda_cedo" value="1")
                        else
                            input.w3-check(type="checkbox" name="acorda_cedo" value="1" checked)              
                    p
                        label Gosta de ler    
                        if a.atributos.gosta_ler
                            input.w3-check(type="checkbox" name="gosta_ler" value="1")
                        else
                            input.w3-check(type="checkbox" name="gosta_ler" value="1" checked)                 
                    p
                        label Gosta de música    
                        if a.atributos.gosta_musica
                            input.w3-check(type="checkbox" name="gosta_musica" value="1")
                        else
                            input.w3-check(type="checkbox" name="gosta_musica" value="1" checked)                  
                    p
                        label Gosta de comer    
                        if a.atributos.gosta_comer
                            input.w3-check(type="checkbox" name="gosta_comer" value="1")
                        else
                            input.w3-check(type="checkbox" name="gosta_comer" value="1" checked)                  
                    p
                        label Gosta de animais de estimação    
                        if a.atributos.gosta_animais_estimacao
                            input.w3-check(type="checkbox" name="gosta_animais_estimacao" value="1")
                        else
                            input.w3-check(type="checkbox" name="gosta_animais_estimacao" value="1" checked)                  
                    p
                        label Gosta de dançar    
                        if a.atributos.gosta_dancar
                            input.w3-check(type="checkbox" name="gosta_dancar" value="1")
                        else
                            input.w3-check(type="checkbox" name="gosta_dancar" value="1" checked)

                    p
                        label Comida Favorita
                        input.w3-input.w3-round(type="text" name="comida_favorita" value=a.atributos.comida_favorita)                        
                    
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Add
               
        footer.w3-container.w3-purple
            h5 Generated by EngWeb2023 in #{d} - [#[a(href="/") Return]]