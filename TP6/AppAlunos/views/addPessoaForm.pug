extends layout 
block content 

    .w3-card-4
        header.w3-container.w3-purple
            h2 Person Form
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label Name
                input.w3-input.w3-round(type="text" name="nome")
                label Idade
                input.w3-input.w3-round(type="number" name="idade")

                fieldset
                    legend Morada
                    label Cidade
                    input.w3-input.w3-round(type="text" name="cidade")
                    label Distrito 
                    input.w3-input.w3-round(type="text" name="distrito")
                label Sexo
                 input.w3-input.w3-round(type="text" name="sexo")

                label Descrição
                input.w3-input.w3-round(type="text" name="descrição")

                fieldset
                    legend ID
                    label BI
                    input.w3-input.w3-round(type="text" name="BI")
                    label CC
                    input.w3-input.w3-round(type="text" name="CC")
                
                label Profissão
                input.w3-input.w3-round(type="text" name="profissao")
                
                fieldset
                    legend Partido Político
                    label Nome do Partido
                    input.w3-input.w3-round(type="text" name="party_name")
                    label Abreviatura do Partido
                    input.w3-input.w3-round(type="text" name="party_abbr")

                label Religião
                input.w3-input.w3-round(type="text" name="religiao")

                label Desportos Realizados (divididos por vírgula)
                input.w3-input.w3-round(type="text" name="desportos")

                label Animais Preferidos (divididos por vírgula)
                input.w3-input.w3-round(type="text" name="animais")

                label Figuras Públicas Portuguesas preferidas (divididas por vírgula)
                input.w3-input.w3-round(type="text" name="figura_publica_pt")

                label Marca do Carro
                input.w3-input.w3-round(type="text" name="marca_carro")

                label Destinos favoritos (divididos por vírgula)
                input.w3-input.w3-round(type="text" name="destinos_favoritos")

                fieldset
                    legend Atributos
                    p
                        label Fumador    
                        input.w3-check(type="checkbox" name="fumador" value="1")        
                    p
                        label Gosta de cinema    
                        input.w3-check(type="checkbox" name="gosta_cinema" value="1")                  
                    p
                        label Gosta de viajar    
                        input.w3-check(type="checkbox" name="gosta_viajar" value="1")                  
                    p
                        label Acorda cedo    
                        input.w3-check(type="checkbox" name="acorda_cedo" value="1")               
                    p
                        label Gosta de ler    
                        input.w3-check(type="checkbox" name="gosta_ler" value="1")                 
                    p
                        label Gosta de música    
                        input.w3-check(type="checkbox" name="gosta_musica" value="1")                  
                    p
                        label Gosta de comer    
                        input.w3-check(type="checkbox" name="gosta_comer" value="1")                  
                    p
                        label Gosta de animais de estimação    
                        input.w3-check(type="checkbox" name="gosta_animais_estimacao" value="1")                  
                    p
                        label Gosta de dançar    
                        input.w3-check(type="checkbox" name="gosta_dancar" value="1")

                    p
                        label Comida Favorita
                        input.w3-input.w3-round(type="text" name="comida_favorita")                        
                    
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Add
               
        footer.w3-container.w3-purple
            h5 Generated by EngWeb2023 in #{d} - [#[a(href="/") Return]]